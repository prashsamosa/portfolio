{
  "extends": "astro/tsconfigs/base", // ✅ Good - Astro's recommended base config
  "compilerOptions": {
    "baseUrl": ".", // ✅ Makes path mapping relative to project root
    "paths": {
      "@/*": ["./src/*"] // ✅ Enables alias like "@/components/Foo"
    },
    "jsx": "react-jsx", // ✅ Required if using React components
    "jsxImportSource": "react" // ✅ For automatic JSX runtime
  }
}
