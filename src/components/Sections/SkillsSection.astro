---
import SkillsAccordion from "@/components/SkillsAccordion";
---

<div class="skills-container">
  <SkillsAccordion client:load />
</div>

<style scoped>
  .skills-container {
    margin-bottom: 1rem;
  }

  /* Fallback styling while component is loading */
  .skills-container:empty::after {
    content: "Loading skills...";
    display: block;
    padding: 1rem;
    text-align: center;
    opacity: 0.7;
    font-style: italic;
  }
</style>
