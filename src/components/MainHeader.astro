---
import Navigation from "@/components/Navigation.astro";
import Socials from "@/components/Socials.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import TOC from "@/components/TOC.astro";

interface Props {
  isHome: boolean;
  title?: string;
  subtitle?: string;
  details?: string;
  navItems?: string[];
  content?: string;
}

const { isHome, title, subtitle, details, navItems, content } = Astro.props;
const hasHeaderTexts = Boolean(title || subtitle || details);
---

<header class={`header ${isHome ? "header--home" : "header--page"}`}>
  {
    hasHeaderTexts && (
      <div class="header__content">
        <div class="header__intro">
          {title && <h1 class="header__title">{title}</h1>}
          {subtitle && <h2 class="header__subtitle">{subtitle}</h2>}
        </div>
        {details && (
          <div class="header__details-wrapper">
            <p class="header__details">{details}</p>
          </div>
        )}
      </div>
    )
  }

  {!isHome && <Breadcrumbs />}

  <div class="header__navigation">
    {isHome && navItems?.length > 0 && (
      <div class="header__nav-wrapper">
        <Navigation navItems={navItems} />
      </div>
    )}
    {isHome && (
      <div class="header__socials-wrapper">
        <Socials />
      </div>
    )}
  </div>

  {content && (
    <div class="header__toc-wrapper">
      <TOC content={content} />
    </div>
  )}
</header>

<style>
  .header {
    display: flex;
    flex-direction: column;
    max-width: 32rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  }

  .header--home {
    justify-content: flex-start;
    min-height: auto;
  }

  .header--page {
    justify-content: flex-start;
    background: rgba(255, 255, 255, 0.01);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  /* Content Section */
  .header__content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .header__intro {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .header__title {
    font-size: clamp(2.25rem, 6vw, 3rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
    background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .header__subtitle {
    font-size: clamp(1.125rem, 3.5vw, 1.375rem);
    font-weight: 500;
    line-height: 1.4;
    margin: 0;
    color: rgba(var(--primary-text-value), 0.75);
    letter-spacing: -0.01em;
  }

  .header__details-wrapper {
    padding: 1rem 1.25rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    position: relative;
  }

  .header__details {
    margin: 0;
    line-height: 1.6;
    color: rgba(var(--primary-text-value), 0.7);
    font-size: 0.95rem;
  }

  /* Navigation Section */
  .header__navigation {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header__nav-wrapper,
  .header__socials-wrapper {
    position: relative;
  }

  .header__socials-wrapper {
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.025);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
  }

  /* TOC Section */
  .header__toc-wrapper {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Desktop Styles */
  @media only screen and (min-width: 1024px) {
    .header {
      position: sticky;
      top: 2rem;
      height: calc(100vh - 4rem);
      padding: 2.5rem;
      overflow-y: auto;
      margin: 2rem 0;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .header--home {
      width: 42%;
      min-height: calc(100vh - 4rem);
    }

    .header--page {
      width: 32%;
    }

    .header__content {
      gap: 2rem;
    }

    .header__intro {
      gap: 1rem;
    }

    .header__navigation {
      margin-top: 2.5rem;
      padding-top: 2rem;
      gap: 1.5rem;
    }

    .header__details-wrapper {
      padding: 1.25rem 1.5rem;
    }

    .header__socials-wrapper {
      padding: 1rem 1.25rem;
    }

    /* Custom scrollbar */
    .header::-webkit-scrollbar {
      width: 4px;
    }

    .header::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 2px;
    }

    .header::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 2px;
    }

    .header::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 255, 255, 0.3);
    }
  }

  /* Tablet Styles */
  @media only screen and (max-width: 1023px) and (min-width: 769px) {
    .header {
      max-width: 100%;
      padding: 2rem;
      margin: 1rem;
      border-radius: 20px;
    }

    .header__navigation {
      margin-top: 1.75rem;
      padding-top: 1.75rem;
    }

    .header__content {
      gap: 1.75rem;
    }
  }

  /* Mobile Styles */
  @media only screen and (max-width: 768px) {
    .header {
      padding: 1.25rem;
      max-width: 100%;
      margin: 0.5rem;
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.015);
    }

    .header__navigation {
      margin-top: 1.5rem;
      padding-top: 1.25rem;
      gap: 1rem;
    }

    .header__content {
      gap: 1.25rem;
    }

    .header__details-wrapper {
      padding: 0.875rem 1rem;
    }

    .header__socials-wrapper {
      padding: 0.625rem 0.875rem;
    }
  }

  /* Small Mobile Styles */
  @media only screen and (max-width: 480px) {
    .header {
      padding: 1rem;
      margin: 0.25rem;
      border-radius: 10px;
    }

    .header__navigation {
      margin-top: 1.25rem;
      padding-top: 1rem;
      gap: 0.875rem;
    }

    .header__content {
      gap: 1rem;
    }

    .header__intro {
      gap: 0.5rem;
    }

    .header__details-wrapper {
      padding: 0.75rem 0.875rem;
    }

    .header__socials-wrapper {
      padding: 0.5rem 0.75rem;
    }

    .header__title {
      font-size: clamp(1.875rem, 8vw, 2.25rem);
    }

    .header__subtitle {
      font-size: clamp(1rem, 4vw, 1.125rem);
    }
  }

  /* Animations */
  @media (prefers-reduced-motion: no-preference) {
    .header {
      animation: fadeInUp 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .header__title {
      animation: fadeInUp 0.8s cubic-bezier(0.25, 0.8, 0.25, 1) 0.1s both;
    }

    .header__subtitle {
      animation: fadeInUp 0.8s cubic-bezier(0.25, 0.8, 0.25, 1) 0.2s both;
    }

    .header__details-wrapper {
      animation: fadeInUp 0.8s cubic-bezier(0.25, 0.8, 0.25, 1) 0.3s both;
    }

    .header__navigation {
      animation: fadeInUp 0.8s cubic-bezier(0.25, 0.8, 0.25, 1) 0.4s both;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hover Effects */
  .header__details-wrapper:hover,
  .header__socials-wrapper:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.15);
    transition: all 0.3s ease;
  }

  /* Focus States */
  .header:focus-within {
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.1);
  }
</style>
