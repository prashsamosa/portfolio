---
import Navigation from "@/components/Navigation.astro";
import Socials from "@/components/Socials.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import TOC from "@/components/TOC.astro";

interface Props {
  isHome: boolean;
  title?: string;
  subtitle?: string;
  details?: string;
  navItems?: string[];
  content?: string;
}

const { isHome, title, subtitle, details, navItems, content } = Astro.props;
const hasHeaderTexts = Boolean(title || subtitle || details);
---

<header class={`header ${isHome ? "header--home" : "header--page"}`}>
  {
    hasHeaderTexts && (
      <div class="header__content">
        {title && <h1 class="header__title">{title}</h1>}
        {subtitle && <h2 class="header__subtitle">{subtitle}</h2>}
        {details && <p class="header__details">{details}</p>}
      </div>
    )
  }

  {!isHome && <Breadcrumbs />}

  <div class="header__navigation">
    {isHome && navItems?.length > 0 && <Navigation navItems={navItems} />}
    {isHome && <Socials />}
  </div>

  {content && <TOC content={content} />}
</header>

<style>
  .header {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 30rem;
    padding: 2rem;
  }

  .header--home {
    justify-content: flex-start;
    min-height: 100vh;
  }

  .header--page {
    justify-content: flex-start;
  }

  .header__content > * {
    margin: 0;
  }

  .header__title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    line-height: 1.1;
    margin-bottom: 0.5rem;
  }

  .header__subtitle {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    margin-bottom: 1rem;
    color: rgba(var(--primary-text-value), 0.8);
  }

  .header__details {
    line-height: 1.6;
    color: rgba(var(--primary-text-value), 0.7);
  }

  .header__navigation {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: auto;
  }

  @media only screen and (min-width: 1024px) {
    .header {
      position: sticky;
      top: 0;
      height: 100vh;
      padding: 4rem 2rem;
      overflow-y: auto;
    }

    .header--home {
      width: 40%;
      justify-content: flex-start; /* Changed from space-between */
    }

    .header--page {
      width: 30%;
      justify-content: flex-start;
    }

    .header__navigation {
      margin-top: 2rem; /* Add controlled spacing instead of auto */
    }
  }

  @media only screen and (max-width: 768px) {
    .header {
      padding: 1.5rem;
      max-width: 100%;
    }

    .header--home {
      min-height: auto;
    }
  }
</style>
