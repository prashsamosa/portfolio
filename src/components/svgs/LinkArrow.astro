---
// ArrowRight.astro
interface Props {
  class?: string;
  size?: string | number;
  color?: string;
}

const { class: className, size = "24", color, ...rest } = Astro.props;
---

<svg
  class={className}
  {...rest}
  width={size}
  height={size}
  fill="none"
  viewBox="0 0 24 24"
  xmlns="http://www.w3.org/2000/svg"
  aria-hidden="true"
>
  <path
    d="M4 12H20M20 12L16 8M20 12L16 16"
    stroke={color || "currentColor"}
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"></path>
</svg>
