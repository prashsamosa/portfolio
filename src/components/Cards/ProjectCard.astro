---
import { Image } from 'astro:assets';
import Link from '@/components/Link.astro';

interface Props {
  class?: string;
  title: string;
  description?: string;
  imagesrc: ImageMetadata;
  imageAlt: string;
  github?: string;
  liveLink?: string;
  postLink?: string;
  tags?: string[];
  href?: string;
  featured?: boolean;
}

const {
  class: className,
  title,
  description,
  imagesrc,
  imageAlt,
  github,
  liveLink,
  postLink,
  tags,
  href,
  featured = false,
  ...rest
} = Astro.props;
---

<article class={`project-card ${featured ? 'project-card--featured' : ''} ${className || ''}`} {...rest}>
  <div class="project-card__image-container">
    {
      href ? (
        <a href={href} aria-label={`Go to ${title} project page`} class="project-card__image-link">
          <Image src={imagesrc} alt={imageAlt} loading="lazy" class="project-card__image" />
          <div class="project-card__overlay">
            <svg class="project-card__overlay-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6m4-3h6v6m-11 5L21 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </a>
      ) : (
        <Image src={imagesrc} alt={imageAlt} loading="lazy" class="project-card__image" />
      )
    }
  </div>

  <div class="project-card__content">
    <div class="project-card__header">
      <h2 class="project-card__title">{title}</h2>
      {featured && <span class="project-card__badge">âœ¨</span>}
    </div>

    {description && <p class="project-card__description">{description}</p>}

    {tags && tags.length > 0 && (
      <div class="project-card__tags">
        {tags.map((tag) => <span class="project-card__tag">{tag}</span>)}
      </div>
    )}

    {(github || liveLink || postLink) && (
      <div class="project-card__links">
        {github && <Link url={github} name="Github" redirect={true} />}
        {liveLink && <Link url={liveLink} name="Live" redirect={true} />}
        {postLink && <Link url={postLink} name="Learn More" redirect={false} />}
      </div>
    )}
  </div>
</article>

<style>
  .project-card {
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    color: inherit;
    border: 2px solid white;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    position: relative;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
    border-color: white;
  }

  .project-card--featured::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, white, rgba(255, 255, 255, 0.6));
    border-radius: 20px 20px 0 0;
  }

  /* Image Container */
  .project-card__image-container {
    position: relative;
    overflow: hidden;
    background: rgba(var(--primary-text-value), 0.05);
    border-bottom: 1px solid white;
  }

  .project-card__image-link {
    display: block;
    position: relative;
    overflow: hidden;
  }

  .project-card__image {
    object-fit: cover;
    width: 100%;
    height: 8rem;
    transition: transform 0.3s ease;
  }

  .project-card__image-link:hover .project-card__image {
    transform: scale(1.05);
  }

  .project-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(var(--primary-text-value), 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card__image-link:hover .project-card__overlay,
  .project-card__image-link:focus .project-card__overlay {
    opacity: 1;
  }

  .project-card__overlay-icon {
    color: rgba(255, 255, 255, 0.9);
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  .project-card__image-link:focus {
    outline: 2px solid white;
    outline-offset: 2px;
  }

  /* Content */
  .project-card__content {
    padding: 1rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    border-top: 1px solid white;
  }

  .project-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    gap: 0.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  }

  .project-card__title {
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
    color: inherit;
  }

  .project-card__badge {
    font-size: 1.2rem;
    line-height: 1;
    opacity: 0.8;
    border: 1px solid white;
    border-radius: 50%;
    padding: 0.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
  }

  .project-card__description {
    margin-bottom: 1rem;
    line-height: 1.5;
    color: rgba(var(--primary-text-value), 0.8);
    padding: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
  }

  /* Tags */
  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
    padding: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
  }

  .project-card__tag {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.6rem;
    border: 1px solid white;
    border-radius: 20px;
    color: rgba(var(--primary-text-value), 0.9);
    transition: all 0.2s ease;
    background: rgba(255, 255, 255, 0.1);
  }

  .project-card__tag:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: white;
    transform: translateY(-1px);
    box-shadow: 0 2px 4px rgba(255, 255, 255, 0.1);
  }

  /* Links */
  .project-card__links {
    display: flex;
    gap: 0.8rem;
    margin-top: auto;
    flex-wrap: wrap;
    padding: 0.75rem;
    border: 1px solid white;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
  }

  .project-card__link:hover {
    color: rgba(var(--primary-text-value), 1);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .project-card {
      margin-bottom: 1.2rem;
      border-width: 1.5px;
    }

    .project-card__image {
      height: 7rem;
    }

    .project-card__content {
      padding: 0.8rem;
    }

    .project-card__title {
      font-size: 1rem;
    }

    .project-card__links {
      gap: 0.6rem;
      padding: 0.6rem;
    }
  }

  @media (max-width: 480px) {
    .project-card {
      border-width: 1px;
    }

    .project-card__content {
      padding: 0.7rem;
    }

    .project-card__links {
      flex-direction: column;
      gap: 0.4rem;
      padding: 0.5rem;
    }

    .project-card__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.3rem;
    }
  }

  /* Smooth animations */
  @media (prefers-reduced-motion: no-preference) {
    .project-card {
      animation: slideUp 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Focus management for accessibility */
  .project-card:focus-within {
    border-color: white;
  }
</style>
